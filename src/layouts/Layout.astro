---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} - Armando Rizqy</title>
    </head>

    <!-- Body -->
    <body class="min-h-screen flex flex-col">
        <p class="text-center bg-amber-200 py-1">
            Site is still under constructions &#9888;
        </p>
        <!-- Header -->
        <header class="z-10 h-16 w-full">
            <div
                class="h-full w-full px-6 lg:px-20 flex items-center justify-between bg-white shadow-lg"
            >
                <!-- Logo -->
                <a href="/">&#127775;</a>
                <!-- Burger Button -->
                <button
                    id="burger-menu"
                    type="button"
                    class="lg:hidden p-0.5 outline outline-1 outline-gray-600 text-gray-600 rounded-lg"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                        ></path>
                    </svg>
                </button>
                <!-- Nav > 1024 px -->
                <nav class="hidden lg:flex lg:space-x-2">
                    <div class="py-1 px-2">About</div>
                    <div class="py-1 px-2">Portfolio</div>
                    <div class="py-1 px-2">Contact</div>
                </nav>
            </div>
            <!-- Nav < 1024 px -->
            <nav id="menu" class="hidden lg:hidden w-full pb-3 px-6 bg-white shadow-lg rounded-b-xl">
                <div class="py-2 font-medium">
                    About
                </div>
                <div class="py-2 font-medium border-t-2">
                    Portfolio
                </div>
                <div class="py-2 font-medium border-t-2">
                    Contact
                </div>
            </nav>
        </header>

        <!-- Main -->
        <slot />

        <!-- Footer -->
        <footer
            class="z-0 mt-auto h-12 w-full flex justify-center items-center"
        >
            <p class="text-sm text-gray-700">
                Developed by
                <a href="https://github.com/mandorzqy">&#127775;</a>
                &copy; 2024
            </p>
        </footer>
    </body>

    <style is:global>
        :root {
            --accent: 124, 58, 237;
            --accent-gradient: linear-gradient(
                45deg,
                rgb(var(--accent)),
                #1b007a 30%,
                white 60%
            );
        }
        html {
            background-color: #ffffff;
        }
    </style>
</html>
